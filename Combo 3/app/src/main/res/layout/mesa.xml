<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".app.MesaActivity"
    android:background="#dbdbdb">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:id="@+id/botaoHome"
        android:background="#c0bfbf"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:onClick="chamaHome"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informe a Mesa!"
        android:id="@+id/lblMesa"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:editable="false"
        android:textSize="30dp"
        android:textColor="#000000" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_marginTop="60dp"
        android:entries="@array/mesa"
        android:layout_below="@+id/lblMesa"
        android:layout_alignRight="@+id/botaoHome"
        android:layout_alignEnd="@+id/botaoHome"
        android:layout_alignLeft="@+id/botaoHome"
        android:layout_alignStart="@+id/botaoHome" />

</RelativeLayout>
